<h1>Shopping Cart</h1>
<a href="/"><i class="fa fa-reply" aria-hidden="true"> Continue Shopping</i></a>
<div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		{{#if hasErrors}}
			<div class="alert alert-danger">
				{{# each errors }}
					<p>{{this}}</p>
				{{/each}}
			</div>
		{{/if}}
	</div>
</div>
{{# if products }}
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<ul class="list-group">
				{{# each products}}
					<li class="list-group-item">
						<span class="bold">{{ this.item.name }}</span>
						<div class="clearfix">
							<div class="pull-right">
								${{ this.item.price }} x
								<input type="number" min="1" value={{ this.qty }}>
								<button name="update-cart" id="{{ this.item._id }}" class="btn btn-warning"
										role="button">Update
								</button>
								<a href="/remove-from-cart/{{ this.item._id }}">
									<button class="btn btn-danger" role="button">Remove
									</button>
								</a>
								</button>
							</div>
						</div>
					</li>
				{{/each}}
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<span class="bold">Total: ${{ totalPrice }}</span>
		</div>
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<a href="/checkout" type="button" class="btn btn-success"><i class="fa fa-credit-card" aria-hidden="true">
				Checkout</i></a>
		</div>
	</div>
{{ else }}
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<span class="bold">No Items in Cart</span>
		</div>
	</div>
{{/if}}

<script type="text/javascript" src="javascripts/updatecart.js"></script>